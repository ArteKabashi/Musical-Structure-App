<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainitemId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_image1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:foregroundGravity="center|fill_vertical"
        android:src="@mipmap/beberexha" />

    <TextView
        android:id="@+id/txt_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/img_image1"
        android:padding="8dp"
        android:text="@string/string5"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>

